{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [ "./src/*" ],
      "@db/*": [ "./src/db/*" ],
      "@api/*": [ "./src/api/*" ],
      "@config/*": [ "./src/config/*" ],
      "@utils/*": [ "./src/utils/*" ],
      "@states/*": [ "./src/states/*" ],
      "@tests/*": [ "./tests/*" ],
    },
  },
  "include": ["src/**/*", "./tests/**/*", "tests", "vitest.config.ts"],
  "exclude": ["node_modules"]
}